<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/img_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/cart_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_cart"
            android:ellipsize="end"
            android:maxLines="3"
            android:textAppearance="@style/Textcolor.GreenMedium" />

        <TextView
            android:id="@+id/singleprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_title"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_cart"
            android:text="@string/singelprice"
            android:textAppearance="@style/Textcolor.SomberMedium" />

        <TextView
            android:id="@+id/tv_singleprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_title"
            android:layout_toRightOf="@id/singleprice"
            android:textAppearance="@style/Textcolor.SomberMedium" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_title"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_singleprice"
            android:text="@string/num"
            android:textAppearance="@style/Textcolor.SomberMedium" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_title"
            android:layout_toRightOf="@id/num"
            android:textAppearance="@style/Textcolor.SomberMedium" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/singleprice"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_cart"
            android:text="@string/productcount"
            android:textAppearance="@style/Textcolor.RedMedium" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/singleprice"
            android:layout_toRightOf="@id/count"
            android:textAppearance="@style/Textcolor.RedMedium" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

</LinearLayout>